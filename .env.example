# SQL Server Configuration Example
# Copy this file to .env and update with your actual database credentials

# SQL Server Instance Name
# Format: SERVER_NAME\INSTANCE_NAME (use double backslash)
# Example for SQL Server Express: LAPTOP-NAME\\SQLEXPRESS
DB_SERVER=YOUR_SERVER\\SQLEXPRESS

# Database Name
DB_DATABASE=BTL2_DBS

# Authentication
# For Windows Authentication: Use DOMAIN\\Username format and leave password empty
# For SQL Server Authentication: Use username and password
DB_USER=YOUR_COMPUTER\\Your_Username
DB_PASSWORD=

# Connection Security
# Set to true if using encrypted connections (required for Azure SQL)
DB_ENCRYPT=true

# Trust Server Certificate
# Set to true if using self-signed certificates
DB_TRUST_CERT=true
